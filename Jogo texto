	inclua biblioteca Texto --> tx

	inteiro velocidade = 1 //VELOCIDADE DO TEXTO
	inteiro resposta 
	inteiro turno = 0
	
	funcao inicio()
	{
		desenhar_titulo()
		capitulo1()
	}

	funcao desenhar_titulo(){
		escreva(" ▄██████▄          ▄█    █▄     ▄██████▄      ███        ▄████████  ▄█             ▄██████▄   ▄█    █▄     ▄████████    ▄████████  ▄█        ▄██████▄   ▄██████▄     ▄█   ▄█▄ \n")
		escreva("███    ███        ███    ███   ███    ███ ▀█████████▄   ███    ███ ███            ███    ███ ███    ███   ███    ███   ███    ███ ███       ███    ███ ███    ███   ███ ▄███▀ \n")
		escreva("███    ███        ███    ███   ███    ███    ▀███▀▀██   ███    █▀  ███            ███    ███ ███    ███   ███    █▀    ███    ███ ███       ███    ███ ███    ███   ███▐██▀   \n")
		escreva("███    ███       ▄███▄▄▄▄███▄▄ ███    ███     ███   ▀  ▄███▄▄▄     ███            ███    ███ ███    ███  ▄███▄▄▄      ▄███▄▄▄▄██▀ ███       ███    ███ ███    ███  ▄█████▀    \n")
		escreva("███    ███      ▀▀███▀▀▀▀███▀  ███    ███     ███     ▀▀███▀▀▀     ███            ███    ███ ███    ███ ▀▀███▀▀▀     ▀▀███▀▀▀▀▀   ███       ███    ███ ███    ███ ▀▀█████▄    \n")
		escreva("███    ███        ███    ███   ███    ███     ███       ███    █▄  ███            ███    ███ ███    ███   ███    █▄  ▀███████████ ███       ███    ███ ███    ███   ███▐██▄   \n")
