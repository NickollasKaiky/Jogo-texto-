	funcao escreva_lento(cadeia texto){

		caracter letra
		
		para(inteiro i=0; i < tx.numero_caracteres(texto); i++){

		letra = tx.obter_caracter(texto, i)

		escreva(letra)
		u.aguarde(velocidade)

		}
	}
	funcao leia_resposta(inteiro alternativas){
		
		faca{
		
			leia(resposta)
		
		}enquanto(resposta>alternativas ou resposta <= 0)
		
	}
	funcao capitulo1(){

		
		escreva_lento("\nVocê é Jack Torrance, escritor e ex-professor. Acaba de chegar ao Hotel Overlook, nas \nmontanhas do Colorado, para uma entrevista de emprego como zelador de inverno.\nO gerente, Sr. Ullman, avisa:\n— \"O hotel ficará fechado e isolado pela neve por cinco meses. É um trabalho solitário. E... \npreciso ser sincero, o antigo zelador enlouqueceu e matou a família aqui.\"\n")
		escreva_lento("\n[1] Mostrar preocupação e perguntar mais detalhes sobre a tragédia.\n")
		escreva_lento("[2] Fingir que não se importa e garantir que está pronto para o trabalho.\n")
		
		leia_resposta(2)

		limpa()

		se ( resposta == 1 ){
			escreva_lento("Você olha sério para Ullman e pergunta:\n— “O que exatamente aconteceu com o antigo zelador?”\nEle suspira e responde:\n— “O nome dele era Charles Grady. Durante o isolamento, ele enlouqueceu... atacou a esposa e as duas filhas com um machado,\n antes de tirar a própria vida. Foi terrível. Por isso preciso ter certeza de que você entende a pressão que o isolamento causa.”\nVocê sente um arrepio percorrer sua espinha, mas mantém a postura.\n")
			escreva_lento("\n[1] “Entendo, senhor Ullman. Mas eu sou diferente. Esse trabalho é perfeito para mim.”\n")
			escreva_lento("[2] “Com todo respeito, essa história me preocupa. Talvez eu não seja a pessoa certa.”\n")
			leia_resposta(2)
			se(resposta == 1){
				limpa()
				escreva_lento("Você encara Ullman com firmeza:\n— “Entendo, senhor. Mas eu sou diferente. Esse trabalho é perfeito para mim. Preciso de paz para escrever meu livro.”\n\nUllman sorri, aliviado:\n— “Ótimo. Então está decidido. O senhor Torrance será o zelador de inverno.”")
				capitulo2(1)
			}
			senao{
				limpa()
				escreva_lento("— “Com todo respeito, essa história me preocupa. Talvez eu não seja a pessoa certa.” — você diz, hesitante.\nUllman assente, compreensivo:\n— “Entendo… É uma decisão séria. Mas se mudar de ideia, estaremos esperando.”\n\nMesmo assim, você continua pensando se realmente consegue lidar com o isolamento e o peso do\nhotel.\nVocê decide que vale a pena tentar\n\n")
				capitulo2(1)
			}

	
		}
		senao{
			escreva_lento("Você finge que não se importa e responde com confiança:\n— “Isso não é problema. Estou pronto para o trabalho, senhor Ullman.”\n\nO gerente observa seu tom firme, um pouco surpreso com a falta de hesitação, mas sorri:\n— “Ótimo. Então está decidido. O senhor Torrance será o zelador do inverno.”")
				capitulo2(1)
		}
	}
	funcao capitulo2(inteiro opcao){

		se(opcao == 1){
			escreva_lento("\n\nDias, depois você viaja até o Hotel Overlook com sua esposa, Wendy, e seu filho, Danny.\nO lugar é imenso com corredores intermináveis e uma atmosfera estranhamente silenciosa.\n\nO cozinheiro, Hallorann, percebe que Danny tem um dom especial, algo que ele chama de “O Iluminado”, \na habilidade de ver e sentir coisas que os outros não percebem.\n")
			escreva_lento("\nÀ noite, sozinho nos corredores, você sente que o hotel...está vivo.\nAs paredes parecem sussurar, memórias se arrastam como ecos incisíveis\n")
			escreva_lento("\n[1] Ignora e tenta se concentar na escrita do livro.\n")
			escreva_lento("[2] Explora os corredores à noite para descobrir de onde vêm os susurros.\n")
			
			leia_resposta(2)

		se ( resposta == 1){
			limpa()
			capitulo3(1)
		}senao{
			limpa()
			capitulo3(2)
			}
		}
	}
	funcao capitulo3(inteiro opcao){
		se(opcao == 1){	
			escreva_lento("Você decide que não vai deixar levar por bobagens.\nSenta-se diante da máquina de escrever encara a página em branco e pensa: \n“Agora vai. O silêncio deste lugar é perfeito para trabalhar”")
			escreva_lento("\nAs horas passam... mas as palavras não vêm.\nA cada tentaiva, sua mente se perde em ecos, imagens de neve e lembranças distorcidas.")
			escreva_lento("\nWendy entra no salão:\n—“Jack... você não está escrevendo nada?”\n\nSua frustração aumenta. Uma voz, baixa e quase imperceptível, sussura:\n—“Ela não acredita em você... ninguém acredita... o hotel pode ser seu verdadeiro lar”\n")
			escreva_lento("\n[1] Explode com Wendy acusando-a de não apoiar seus esforços.\n[2] Se controla e diz que só precisa de mais tempo para escrever\n")

		leia_resposta(2)

		se ( resposta == 1){
			limpa()
			capitulo4(1)
		}
		senao{
			limpa()
			capitulo4(4)
		}
		
	}
	senao se(opcao == 2){
		escreva_lento("Você decide investigar os corredores à noite.\nA cada passo, o silêncio se mistura com sussurros quase inaudíveis. O carpete vermelho parece se estender infinitamente.\n\nDe repente, você vira uma esquina e vê duas meninas idênticas, de mãos dadas.\n— “Venha brincar com a gente, para sempre… e sempre… e sempre…”\n\nVocê pisca e elas desaparecem.\nO frio percorre sua espinha, mas no fundo, uma estranha sensação de pertencimento cresce dentro de você.\nO hotel parece sussurrar:\n— “Você é um de nós, Jack…”\n")
			escreva_lento("\n[1] Se convence de que foi apenas imaginação e tenta voltar para o quarto.\n[2] Segue os corredores mais fundo, disposto a descobrir até onde o hotel quer levá-lo.\n")
			leia_resposta(2)
			se(resposta == 1){
				limpa()
				escreva_lento("Você balança a cabeça, nervoso.\n— “Não… isso foi só imaginação. Preciso dormir. É só cansaço.”\n\nVolta para o quarto, mas o sono não vem.\nQuando finalmente apaga, sonha com salões cheios de gente, música e gargalhadas.\nUm garçom se aproxima e sussurra em seu ouvido:\n— “Estamos esperando por você, senhor Torrance.”\nAo acordar, seu coração dispara. Não sabe se está sonhando ou se o hotel realmente o chamou.\n")
				escreva_lento("\nNo dia seguinte, você se senta diante da máquina de escrever.\nA página continua em branco. A frustração cresce.\nA voz do hotel, agora mais clara, sussurra:\n— “Ela não acredita em você… ela atrapalha… sempre atrapalhou.”\n")
				escreva_lento("\n[1] Explode com Wendy, acusando-a de não apoiar seus esforços.\n[2] Se controla e diz que só precisa de mais tempo para escrever.\n")

				leia_resposta(2)

				se ( resposta == 1){
				limpa()
				capitulo4(1)
			}
			senao{
				limpa()
				capitulo4(4)
			}
		}
			senao{
				limpa()
				escreva_lento("Você segue os corredores, hipnotizado.\nAs luzes piscam e a cada porta que passa, ecos de vozes antigas chegam aos seus ouvidos: risadas,\nmúsica de festa, brindes.\n\nAté que, de repente, você abre uma porta e encontra um grande salão iluminado.\nHá uma festa acontecendo — homens e mulheres elegantes, vestidos como se fosse a década de\n1920.\nNo bar, um barman sorri para você.\n\n— “Boa noite, senhor Torrance. O que vai beber?”\n\nVocê percebe que conhece aquele homem, embora nunca o tenha visto. O nome dele surge em sua\nmente: Lloyd.\n\nO copo de uísque aparece em sua frente, cheio até a borda.\nVocê não se lembra de pedir.\n")
				escreva_lento("\n[1] Bebe o uísque, aceitando o presente do hotel.\n[2] Recusa e tenta fugir do salão imediatamente.\n")
				leia_resposta(2)
			se(resposta ==1){
				limpa()
				capitulo4(3)
			}
			senao{
		
				limpa()
				capitulo4(2)	
				}
			}
		}
	}
	
	funcao capitulo4(inteiro opcao){
